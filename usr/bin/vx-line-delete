import os
import sys
import errno
import argparse

__author__ = 'Jose Antonio Chavarría'


def parse_args():
    parser = argparse.ArgumentParser(
        description='Delete a line in a file (only first occurrence)',
        epilog='Vitalinux utility'
    )

    parser.add_argument(
        '-t', '--text',
        action='store',
        help='text to delete in file (all line)',
        required=True
    )

    parser.add_argument(
        '-f', '--file',
        action='store',
        help='file to delete line',
        required=True
    )

    parser.add_argument(
        '-q', '--quiet',
        action='store_true',
        help='enable silence mode (no verbose)'
    )

    return vars(parser.parse_args())


def run():
    args = parse_args()

    if not os.path.isfile(args['file']):
        if not args['quiet']:
            print('File "%s" not found' % args['file'])
        sys.exit(errno.ENOENT)

    lines = open(args['file'], 'rb').readlines()

    f = None
    try:
        f = open(args['file'], 'wb')
    except IOError:
        if not args['quiet']:
            print('Error writting to file')
        if f is not None:
            f.close()
        sys.exit(errno.EPERM)  # error writting to file

    # only first occurrence!!!
    deleted = False
    for i in range(len(lines)):
        if deleted or not args['text'] in lines[i]:
            f.write(lines[i])
        else:
            deleted = True

    f.close()

    if not deleted:
        if not args['quiet']:
            print('Text not deleted!!!')
        sys.exit(errno.ENODATA)
    else:
        if not args['quiet']:
            print('Text deleted!!!')

    sys.exit(os.EX_OK)  # no error

if __name__ == '__main__':
    run()
